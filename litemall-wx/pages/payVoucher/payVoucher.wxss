.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-info {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-info .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.info-item .label {
  color: #999;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
}

.info-item .price {
  color: #e64340;
  font-weight: bold;
  font-size: 36rpx;
}

.upload-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.upload-section .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips {
  background-color: #fffbe8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #ed6a0c;
  line-height: 40rpx;
}

.upload-area {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  background-color: #fafafa;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-btn text {
  font-size: 28rpx;
  color: #999;
}

.preview-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.voucher-image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.btn-group {
  display: flex;
  gap: 30rpx;
}

.btn-group .btn {
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.btn-group .rechoose {
  background-color: #1989fa;
  color: #fff;
}

.btn-group .delete {
  background-color: #ee0a24;
  color: #fff;
}

.submit-section {
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: none;
}

.submit-btn.disabled {
  background-color: #ccc;
}
