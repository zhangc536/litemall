page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.tip {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin: 10rpx 0 20rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
}

.code {
  font-size: 36rpx;
  color: #a78845;
  text-align: center;
  margin: 20rpx 0;
}

.qrcode {
  width: 320rpx;
  margin: 0 auto 20rpx;
  display: block;
}

.input-box {
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 8rpx 20rpx;
  margin-top: 16rpx;
}

.invite-input {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #333;
}

.share-btn {
  margin-top: 10rpx;
  background: #a78845;
  color: #fff;
}

.bind-btn {
  margin-top: 20rpx;
  background: #a78845;
  color: #fff;
}
